<aside class="sidebar pos-absolute z-2 on-left sidebar-shadow" style="background: rgba(30, 30, 30, 0.9)" data-role="sidebar" data-toggle="#sidebar-toggle" id="sb1">
    <div class="sidebar-header" style="background: transparent;border-bottom: 1px #101010 solid">
        <a href="/" class="fg-white sub-action" onclick="Metro.sidebar.close('#sb1'); return false;">
            <span class="mif-arrow-left mif-2x"></span>
        </a>
        <span class="title fg-white" style="font-size: 30px"><%=current_page_name%></span>
    </div>
    <ul class="sidebar-menu">
        
        <li class="fg-white">
            <a href="/">
                <span class="icon mif-home"></span>
                <span class="caption">開始畫面</span>
            </a>
        </li>
        <% for(var i = 0; i<page_group_list.length; i++){ %>

            <!--<li class="title"><%=page_group_list[i].page_group_name%></li>-->

            <% if(page_group_list[i].page_group_topic=="Account")
            {
                if(username=="everyone"){
                    continue;
                }
            }

            if(page_group_list[i].page_group_topic=="Network MGMT")
            { %>
                <li class="fg-white bd-white" style="border-top: 2px">
                    <a class="dropdown-toggle" href="#">
                        <span class="mif-flow-tree icon"></span>
                        <%=page_group_list[i].page_group_name%>
                    </a>
                    <ul class="d-menu" data-role="dropdown" style="display: none;background: transparent">
                    <% for(var j = 0; j<page_group_list[i].page_list.length; j++){ %>
                        <li class="fg-white">
                            <a href="<%=page_group_list[i].page_list[j].page_URL%>">
                            <% switch(page_group_list[i].page_list[j].page_icon_type){
                                case "css": %>

                                    <span class="<%=page_group_list[i].page_list[j].page_icon_css%> icon"></span>
                                    <%=page_group_list[i].page_list[j].page_name%>

                                    <% break;
                                case "URL": %>

                                    <img style="display: inline; left: 15px" src="<%=page_group_list[i].page_list[j].page_icon_URL%>"/>
                                    <%=page_group_list[i].page_list[j].page_name%>
                        
                                    <% break;
                            } %>
                            </a>
                        </li>
                    <% } %>
                    </ul>
                </li>
            <%  }
            else
            {
                for(var j = 0; j<page_group_list[i].page_list.length; j++){ %>
                    <li class="fg-white bd-white" style="border-top: 2px">
                        <% if(page_group_list[i].page_list[j].sub_page_list!=null){ %>
                            <a class="dropdown-toggle" href="#">
                        <% } else{ %>
                            <a href="<%=page_group_list[i].page_list[j].page_URL%>">
                        <% }
                        switch(page_group_list[i].page_list[j].page_icon_type){
                            case "css": %>

                                <span class="<%=page_group_list[i].page_list[j].page_icon_css%> icon"></span>
                                <%=page_group_list[i].page_list[j].page_name%>

                                <% break;
                            case "URL": %>

                                <img style="display: inline; left: 15px" src="<%=page_group_list[i].page_list[j].page_icon_URL%>"/>
                                <%=page_group_list[i].page_list[j].page_name%>
                    
                                <% break;
                        } %>
                        </a>

                        <% if(page_group_list[i].page_list[j].sub_page_list!=null){ %>
                            <ul class="d-menu" data-role="dropdown" style="display: none;background: transparent">
                            <% for(var k = 0; k<page_group_list[i].page_list[j].sub_page_list.length; k++){ %>
                                <li class="fg-white">
                                    <a href="<%=page_group_list[i].page_list[j].sub_page_list[k].page_URL%>">
                                    <% switch(page_group_list[i].page_list[j].sub_page_list[k].page_icon_type){
                                        case "css": %>

                                            <span class="<%=page_group_list[i].page_list[j].sub_page_list[k].page_icon_css%> icon"></span>
                                            <%=page_group_list[i].page_list[j].sub_page_list[k].page_name%>

                                            <% break;
                                        case "URL": %>

                                            <img style="display: inline; left: 15px" src="<%=page_group_list[i].page_list[j].sub_page_list[k].page_icon_URL%>"/>
                                            <%=page_group_list[i].page_list[j].sub_page_list[k].page_name%>
                                
                                            <% break;
                                    } %>
                                    </a>
                                </li>
                            <% } %>
                            </ul>
                        <% } %>
                    </li>
                <% } %>
            <% } %>
        <% } %>
    </ul>
</aside>