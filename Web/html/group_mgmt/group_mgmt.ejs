    function onClick_GoBack_Group_List_Btn()
    {
        Show_Group_List_Page();
    }

    function onKeying_Rename_Group_Name_Text(index_str)
    {
        var input_name = $('#group_name_text_' + index_str).val();
        if(input_name==null || input_name=="")
        {
            $('#group_save_name_btn_' + index_str).prop('disabled', true);
        }
        else{
            $('#group_save_name_btn_' + index_str).prop('disabled', false);
        }
    }

    function onClick_Group_Save_Name_Btn(index_str)
    {
        if(selected_device_type==null)
        {
            return;
        }
        
        var new_name = $('#group_name_text_' + index_str).val();
        if (new_name == "") {
            new_name = dev_name;
        }
        else {
            map_group_info_list[Number(index)].group_Name = new_name;
            Group_Change_Name(selected_device_type, map_group_info_list[Number(index)].group_ID, new_name);
        }
        Metro.dialog.close('#group_rename_modal_' + index_str);
        Show_Group_Operation_Page(index_str);
    }

    function onClick_Save_Group_Device_List_Btn(index_str)
    {
        if(selected_device_type==null)
        {
            return;
        }
        
        var group_device_list = Get_Group_Selected_Device_List("group_" + index_str + "_edit_device_list", index_str);
        Edit_Group_Device_List(selected_device_type, map_group_info_list[Number(index_str)].group_ID, group_device_list);
        Metro.dialog.close('#group_device_mgmt_modal_' + index_str);
        Show_Group_Operation_Page(index_str);
    }

    function onClick_Confirm_Delete_Group_Btn(index_str)
    {
        if(selected_device_type==null)
        {
            return;
        }
        
        Remove_One_Group(selected_device_type, map_group_info_list[Number(index)].group_ID);
        
        delete map_group_info_list[index];
        map_group_info_list.lenght--;

        Metro.dialog.close('#group_delete_modal_' + index_str);

        if(status>=0)
        {
            Show_Group_List_Page();
        }
    }

    </script> 
