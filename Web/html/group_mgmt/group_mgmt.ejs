        show_toolbar.push("</ul>");
        show_toolbar.push("</div>");
        show_toolbar.push("<div class=\"cell-1\"></div>");

        show_toolbar.push("</div>");

        var get_toolbar_list = Handle_Get_Group_Operation_Toolbar_Info();
        if(get_toolbar_list!=null)
