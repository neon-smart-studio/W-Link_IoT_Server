            group_ctrl_modal_html.push("</div>");
            group_ctrl_modal_html.push("</div>");
        <% } %>

        $("#group_mgmt_modal_lst").html("");
        $("#group_mgmt_modal_lst").html(group_ctrl_modal_html.join(''));

