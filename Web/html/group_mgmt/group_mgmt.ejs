    function Show_Group_Operation_Page(index_str)
    {
        if(selected_device_type==null)
        {
            return;
        }
        
        $('.gridly').gridly('draggable', 'off');
        $('.gridly').gridly({'responsive': true});

        if($('#group_mgmt_display_area').hasClass('gridly'))
        {
            $('#group_mgmt_display_area').removeClass('gridly');
        }

        Print_Group_Operation_Toolbar(index_str);

        if(selected_device_type!=null)
        {
            $('#group_mgmt_select_device_type').val(selected_device_type);
        }

        var group_ctrl_modal_html = [];

        <% if(service_page_info!=null && current_topic_page_info!=null && current_sub_service_page_info!=null){ %>
            //群組更名
            group_ctrl_modal_html.push("<div class=\"dialog\" data-role=\"dialog\" id=\"group_rename_modal_" + index_str + "\">");
