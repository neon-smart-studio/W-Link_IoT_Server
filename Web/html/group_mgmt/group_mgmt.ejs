            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 200px;
        }
        .group_name{
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 200px;
        }
    </style>

    <script type="text/javascript" src="<%=path_offset%>/js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="<%=path_offset%>/js/websocket.js"></script>
    <script type="text/javascript" src="<%=path_offset%>/js/metro.min.js"></script> 
    <script type="text/javascript" src="<%=path_offset%>/js/jquery.gridly.js"></script>

    <script src="<%=path_offset%>/device_mgmt/Devices.js"></script>
    <script src="<%=path_offset%>/group_mgmt/Groups.js"></script>
    
    <% 
    if(current_sub_service_page_info!=null){
        if(current_sub_service_page_info.additional_js_URL_list!=null){
            for(var i = 0; i<current_sub_service_page_info.additional_js_URL_list.length; i++){ %>
                <script type="text/javascript" src="<%=(path_offset+current_sub_service_page_info.additional_js_URL_list[i])%>"></script> 
    <%      }
        }
    } %>

    <% if(service_page_info!=null && current_topic_page_info!=null && current_sub_service_page_info!=null){ %>
    
    <script type="text/javascript" src="<%=(path_offset+current_sub_service_page_info.page_control_js_URL)%>"></script> 
    
    <script type="text/javascript">

    var ws_get_sb = null;
    
    var serverURI = window.location.host;
        
    var currentUser = null;
    $(document).ready(function() {
        websocket_init(serverURI, "<%=session_token%>", Handle_WebSocket_Connect_Event, Handle_Group_WebSocket_POST_Message, Handle_Group_WebSocket_GET_Message, null, null);
    });

    (function () {
        $(function () {
            $('.gridly').gridly({
                base: 80, // px
                gutter: 8, // px
                columns: 8,
                'responsive': true
            });
            $(document).on("change", ".gridly", function (event) {
                event.preventDefault();
                event.stopPropagation();
                return $('.gridly').gridly();
            });
            return $('.gridly').gridly();
        });

    }).call(this);

    var map_group_info_list = [];
    var selected_device_type = null;

    function Find_Group_Index_By_ID(group_ID)
    {
        for(var i = 0; i<map_group_info_list.length; i++){
            if(map_group_info_list[i].group_ID==group_ID){return i;}
        }
        return -1;
    }

    function Get_Group_ID_By_Index(index)
    {
        return map_group_info_list[Number(index)].group_ID;
    }

    function Get_Group_Name_By_Index(index)
    {
        return map_group_info_list[Number(index)].group_Name;
    }

    function Handle_WebSocket_Connect_Event()
    {
        Show_Group_List_Page();
    }

    function Update_Group_List()
    {
        GET_All_Group_List(selected_device_type, function(rsp_json){
            var show_group_html = [];
            
            for (var i = 0; i < rsp_json.group_list.length; i++) {
                map_group_info_list.push({
                    "group_ID":rsp_json.group_list[i].group_ID,
                    "group_Name":rsp_json.group_list[i].group_Name
                });
                <%
                if(service_page_info!=null && current_topic_page_info!=null && current_sub_service_page_info!=null){
                    switch(current_sub_service_page_info.group_tile_background_type){
                        case "css": %>
                            show_group_html.push("<div id=\"group_ctrl_tile_"+ i +"\" data-role=\"hint\" onclick=\"onClick_Edit_Group_Btn('" + i + "')\" class=\"tile-medium <%=current_sub_service_page_info.group_tile_background_css%> fg-white\"\
                                data-hint-position=\"top\" data-hint-text=\"" + rsp_json.group_list[i].group_Name + "\">");
                            <% switch(current_sub_service_page_info.group_tile_icon_type){
                                case "css": %>
                                show_group_html.push("<span class=\"<%=current_sub_service_page_info.group_tile_icon_css%> mif-4x icon\"></span>");
                                show_group_html.push("<span class=\"branding-bar group_name\" style=\"font-size: 20px\">" + rsp_json.group_list[i].group_Name + "</span>");
                                    <% break;
                                case "URL": %>
                                show_group_html.push("<img class=\"icon\" style=\"display: inline;\" src=\"<%=current_sub_service_page_info.group_tile_icon_URL%>\"/>");
                                show_group_html.push("<span class=\"branding-bar group_name\" style=\"font-size: 20px\">" + rsp_json.group_list[i].group_Name + "</span>");
                                    <% break;
                            } %>
                            show_group_html.push("</div>");
                            <% break;
                        case "URL": %>
                            show_group_html.push("<div id=\"group_ctrl_tile_"+ i +"\" data-role=\"hint\" class=\"tile-medium fg-white\" data-hint-position=\"top\" data-hint-text=\"" + rsp_json.group_list[i].group_Name + "\"\
                                data-cover=\"<%=current_sub_service_page_info.group_tile_background_URL%>\" onclick=\"onClick_Edit_Group_Btn('" + i + "')\">");
                            show_group_html.push("<span class=\"branding-bar\">" + rsp_json.group_list[i].group_Name + "</span>");
                            show_group_html.push("</div>");
                            <% break;
                    }
                }
                %>
            }

            if(!$('#group_mgmt_display_area').hasClass('gridly'))
            {
                $('#group_mgmt_display_area').addClass('gridly');
            }

            $('#group_mgmt_display_area').html('');
            $('#group_mgmt_display_area').html(show_group_html.join(''));
            
            $('.gridly').trigger("change");
            $('.gridly').gridly('draggable', 'off');
            $('.gridly').gridly({'responsive': true});
        });
    }

    function Show_Group_List_Page()
    {
        Print_Groups_Management_Toolbar();

        if(selected_device_type==null)
        {
            selected_device_type = $('#group_mgmt_select_device_type').val();
        }
        else
        {
            $('#group_mgmt_select_device_type').val(selected_device_type);
        }

        Update_Group_List();
    }

    function Print_Group_Avaliable_Device_List(print_id_str, mark_devices, group_index)
    {
        if(selected_device_type==null)
        {
            return;
        }

        GET_All_Device_List(selected_device_type, function(all_dev_lst_json){
            var show_group_device_list = [];

            var group_index_str = "add";
            if(group_index!=null)
            {
                group_index_str = group_index;
            }

            for(var i = 0; i<all_dev_lst_json.device_list.length; i++)
            {
                <%
                if(service_page_info!=null && current_topic_page_info!=null && current_sub_service_page_info!=null){
                    switch(current_sub_service_page_info.group_device_tile_background_type){
                        case "css": %>
                            show_group_device_list.push("<div data-role=\"hint\" class=\"tile-small <%=current_sub_service_page_info.group_device_tile_background_css%> fg-white\" style=\"margin-left: 4px;margin-top: 4px;\" id=\"group_"+group_index_str+"_device_"+ all_dev_lst_json.device_list[i].device_ID +"\" \
                                data-hint-position=\"top\" data-hint-text=\"" + all_dev_lst_json.device_list[i].device_Name + "\" onclick=\"onSelect_Group_Device_Tile(this.id, '" + all_dev_lst_json.device_list[i].device_ID + "')\">");
                            <% switch(current_sub_service_page_info.group_device_tile_icon_type){
                                case "css": %>
                                    show_group_device_list.push("<span class=\"<%=current_sub_service_page_info.group_device_tile_icon_css%> mif-4x icon\"></span>");
                                    show_group_device_list.push("<span class=\"branding-bar device_Name\" style=\"bottom: -5px\">" + all_dev_lst_json.device_list[i].device_Name + "</span>");
                                    <% break;
                                case "URL": %>
                                    show_group_device_list.push("<img class=\"icon\" style=\"display: inline;\" src=\"<%=current_sub_service_page_info.group_device_tile_icon_URL%>\"/>");
                                    show_group_device_list.push("<span class=\"branding-bar device_Name\" style=\"bottom: -5px\">" + all_dev_lst_json.device_list[i].device_Name + "</span>");
                                    <% break;
                            } %>
                            show_group_device_list.push("</div>");
                            <% break;
                        case "URL": %>
                            show_group_device_list.push("<div data-role=\"hint\" class=\"tile-small fg-white\" style=\"margin-left: 4px;margin-top: 4px;\" data-cover=\"<%=current_sub_service_page_info.group_device_tile_background_URL%>\" id=\"group_"+group_index_str+"_device_"+ all_dev_lst_json.device_list[i].device_ID +"\" \
                                data-hint-position=\"top\" data-hint-text=\"" + all_dev_lst_json.device_list[i].device_Name + "\" onclick=\"onSelect_Group_Device_Tile(this.id, '" + all_dev_lst_json.device_list[i].device_ID + "')\">");
                            show_group_device_list.push("<span class=\"branding-bar\">" + all_dev_lst_json.device_list[i].device_Name + "</span>");
                            show_group_device_list.push("</div>");
                            <% break;
                    }
                } %>
            }

            $('#'+print_id_str).html('');
            $('#'+print_id_str).html(show_group_device_list.join(''));

            if(mark_devices)
            {
                GET_Group_Device_List(selected_device_type, map_group_info_list[group_index].group_ID, function(gp_dev_lst_json){
                    for(var i = 0; i<gp_dev_lst_json.group_device_list.length; i++)
                    {
                        if(!$('#group_'+group_index_str+'_device_'+gp_dev_lst_json.group_device_list[i]).hasClass('selected'))
                        {
                            $('#group_'+group_index_str+'_device_'+gp_dev_lst_json.group_device_list[i]).addClass('selected');
                        }
                    }
                });
            }
        });
    }

    function Get_Group_Selected_Device_List(pannel_id_str, group_index)
    {
        var selected_device_list = [];
        var select_device_tile_list = $( "#"+pannel_id_str+" div[class~='selected']" );
        for(var i = 0; i<select_device_tile_list.length; i++)
        {
            var device_id_header_str = "group_"+group_index+"_device_";
            var device_id_str = select_device_tile_list[i].id;
            var device_id = device_id_str.substring(device_id_header_str.length);
            selected_device_list.push(device_id);
        }
        return selected_device_list;
    }
    
    function onSelect_Group_Device_Tile(tile_id, device_ID)
    {
        if(!$('#'+tile_id).hasClass("selected"))
        {
            Handle_Group_Device_Tile_Selected_Event(device_ID);
        }
        else
        {
            Handle_Group_Device_Tile_UnSelected_Event(device_ID);
        }
        $('#'+tile_id).toggleClass("selected");
    }

    function onSelect_Device_Type_Selector()
    {
        selected_device_type = $('#group_mgmt_select_device_type').val();
        
        Update_Group_List();
    }

    function Print_Groups_Management_Toolbar()
    {
        var show_toolbar = [];

        show_toolbar.push("<div class=\"row\">");

        show_toolbar.push("<div class=\"cell-2\">");
        show_toolbar.push("<ul class=\"t-menu open horizontal fg-white <%=current_sub_service_page_info.button_background_css%>\" style=\"text-align:center;z-index: 0;\">");
        show_toolbar.push("<li data-role=\"hint\" data-hint-position=\"top\" data-hint-text=\"新增群組\"><a href=\"#\" onclick=\"onClick_Add_New_Group_Btn()\"><span class=\"mif-plus icon\"></span></a></li>");
        show_toolbar.push("</ul>");
        show_toolbar.push("</ul>");
        show_toolbar.push("</div>"); //cell-2
        
        show_toolbar.push("<div class=\"cell-9\">");
        show_toolbar.push("<h4 class=\"<%=current_sub_service_page_info.page_text_color%>\" style=\"display: inline\">裝置類型:</h4>");
        show_toolbar.push("<select data-role=\"select\" data-filter=\"false\" data-drop-height=\"200px\" id=\"group_mgmt_select_device_type\" data-on-item-select=\"onSelect_Device_Type_Selector()\")\">");
        <%
        var page_group_list = nav_page_info.page_group_list;
        var select_item_icon_data_template;
        for(var i = 0; i<page_group_list.length; i++){
            if(page_group_list[i].page_group_topic=="Device MGMT")
            {
                if(service_page_info==null || current_topic_page_info==null || current_sub_service_page_info==null)
                {
                    break;
                }

                var support_device_type_list = null;
                if(current_sub_service_page_info.group_support_multi_device_type)
                {
                    support_device_type_list = current_sub_service_page_info.group_support_device_type_list;
                }
                else{
                    support_device_type_list = [current_sub_service_page_info.group_support_device_type];
                }
                
                if(support_device_type_list==null)
                {
                    break;
                }

                var support_device_type = null;

                for(var m = 0; m<support_device_type_list.length; m++)
                {
                    support_device_type = support_device_type_list[m];
                    
                    for(var j = 0; j<page_group_list[i].page_list.length; j++){
                        if(page_group_list[i].page_list[j].sub_page_list!=null){
                            if(page_group_list[i].page_list[j].page_topic==support_device_type)
                            {
                                select_item_icon_data_template = "";
                                switch(page_group_list[i].page_list[j].page_icon_type)
                                {
                                    case "css":
                                        select_item_icon_data_template = "<span class='"+page_group_list[i].page_list[j].page_icon_css+" "+page_group_list[i].page_list[j].page_text_color+" icon'></span>";
                                        break;
                                    case "URL":
                                        select_item_icon_data_template = "<img class='icon' style='display: inline;' src='"+page_group_list[i].page_list[j].page_icon_color_URL+"'/>";
                                        break;
                                } %>
                                show_toolbar.push("<option value=\"<%=page_group_list[i].page_list[j].page_topic%>\" data-template=\"<%=select_item_icon_data_template%> $1\"><%=page_group_list[i].page_list[j].page_name%></option>");
                            <% }
                            else{
                                for(var k = 0; k<page_group_list[i].page_list[j].sub_page_list.length; k++){
                                    if(page_group_list[i].page_list[j].sub_page_list[k].page_topic!=support_device_type)
                                    {
                                        continue;
                                    }

                                    select_item_icon_data_template = "";
                                    switch(page_group_list[i].page_list[j].sub_page_list[k].page_icon_type)
                                    {
                                        case "css":
                                            select_item_icon_data_template = "<span class='"+page_group_list[i].page_list[j].sub_page_list[k].page_icon_css+" "+page_group_list[i].page_list[j].sub_page_list[k].page_text_color+" icon'></span>";
                                            break;
                                        case "URL":
                                            select_item_icon_data_template = "<img class='icon' style='display: inline;' src='"+page_group_list[i].page_list[j].sub_page_list[k].page_icon_color_URL+"'/>";
                                            break;
                                    } %>
                                    show_toolbar.push("<option value=\"<%=page_group_list[i].page_list[j].sub_page_list[k].page_topic%>\" data-template=\"<%=select_item_icon_data_template%> $1\"><%=page_group_list[i].page_list[j].sub_page_list[k].page_name%></option>");
                                <% }
                            }
                        }
                    }
                }
            }
        } %>
        show_toolbar.push("</select>");
        show_toolbar.push("</div>"); //cell-9
        show_toolbar.push("<div class=\"cell-1\"></div>"); //cell-1

        show_toolbar.push("</div>"); //row

        $('#group_mgmt_toolbar').html('');
        $('#group_mgmt_toolbar').html(show_toolbar.join(''));
    }

    function onClick_Add_New_Group_Btn()
    {
        selected_device_type = $('#group_mgmt_select_device_type').val();

        Metro.dialog.open('#group_add_modal');
        
        var print_settings = [];

        <%
            if(service_page_info!=null && current_topic_page_info!=null && current_sub_service_page_info!=null){ %>
                print_settings.push("<h4 class=\"<%=current_sub_service_page_info.page_text_color%>\">選取裝置:</h4>");
            <% }
        %>
        print_settings.push("<div data-role=\"panel\">");
        print_settings.push("<div id=\"created_group_select_device_list\" class=\"tiles-grid\" style=\"max-height:200px;overflow: auto;\"></div>");
        print_settings.push("</div>");

        $('#create_group_settings').html('');
        $('#create_group_settings').html(print_settings.join(''));
        
        Print_Group_Avaliable_Device_List("created_group_select_device_list", false, null);
    }

    function onClick_Edit_Group_Btn(index_str)
    {
        selected_device_type = $('#group_mgmt_select_device_type').val();

        Show_Group_Operation_Page(index_str);
    }

    function onKeying_Created_Group_Name_Text()
    {
        var input_name = $('#new_group_name_text').val();
        if(input_name==null || input_name=="")
        {
            $('#group_create_btn').prop('disabled', true);
        }
        else{
            $('#group_create_btn').prop('disabled', false);
        }
    }

    function onClick_Create_Group_Btn()
    {
        if(selected_device_type==null)
        {
            return;
        }
        
        var group_name = $('#new_group_name_text').val();
        if (group_name == null || group_name=="") {
            return;
        }
        
        var selected_device_list = Get_Group_Selected_Device_List("created_group_select_device_list", "add");
    
        Create_New_Group(selected_device_type, group_name, selected_device_list);

        Metro.dialog.close('#group_add_modal');

        Show_Group_List_Page();
    }

    function Show_Group_Device_List_Info(index_str)
    {
        Print_Group_Avaliable_Device_List('group_' + index_str + '_edit_device_list', true, index_str);
    }
    
    function Print_Group_Operation_Toolbar(index_str)
    {
        var show_toolbar = [];

        show_toolbar.push("<div class=\"row\">");

        show_toolbar.push("<div class=\"cell-2\">");
        <% if(service_page_info!=null && current_topic_page_info!=null && current_sub_service_page_info!=null){ %>
            show_toolbar.push("<button href=\"#\" class=\"button cycle large fg-white <%=current_sub_service_page_info.button_background_css%>\" onclick=\"onClick_GoBack_Group_List_Btn()\"><span class=\"mif-arrow-left\"></span></button>");
        <% } %>
        show_toolbar.push("</div>");
             
        show_toolbar.push("<div class=\"cell-9\">");
        show_toolbar.push("<ul class=\"t-menu open horizontal fg-white <%=current_sub_service_page_info.button_background_css%>\" style=\"text-align:center;float: right;\">");
        show_toolbar.push("<li><a href=\"#\" data-role=\"hint\" data-hint-position=\"top\" data-hint-text=\"重新命名\" onclick=\"Metro.dialog.open('#group_rename_modal_"+index_str+"')\"><span class=\"mif-pencil icon\"></span></a></li>");
        show_toolbar.push("<li><a href=\"#\" data-role=\"hint\" data-hint-position=\"top\" data-hint-text=\"裝置管理\" \
